<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:background">@drawable/main_background</item>
    </style>

    <style name="CalButtonStyle">
        <item name="android:background">@drawable/button_background_transparent</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>
    <style name="button_small_style" parent="CalButtonStyle">
        <item name="android:textSize">@dimen/display_text_size</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:gravity">right|center_horizontal</item>
        <item name="android:textColor">@color/edit_text_display</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="display_style">
        <item name="android:textSize">@dimen/display_text_size</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
